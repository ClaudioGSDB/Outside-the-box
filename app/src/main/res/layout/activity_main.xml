<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outside The Box"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:textColor="#979797"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Play"
            android:onClick="onPlay"
            android:layout_marginBottom="16dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Level Select"
            android:onClick="onLevelSelect"
            android:layout_marginBottom="16dp"/>

        <!-- Add the Reset Progress button -->
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Reset Progress"
            android:onClick="onResetProgress"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- First row of level icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/level0_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level1_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level2_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level3_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level4_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>
            </LinearLayout>

            <!-- Second row of level icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/level5_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level6_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level7_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level8_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level9_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>