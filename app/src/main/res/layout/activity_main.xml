<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outside The Box"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:textColor="#979797"/>

        <!-- Play Button -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onPlay"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:rippleColor="#4CAF50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_play"
                    app:tint="#4CAF50"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLAY"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Level Select Button -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onLevelSelect"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:rippleColor="#FF9800">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_grid"
                    app:tint="#FF9800"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEVEL SELECT"
                    android:textColor="#FF9800"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Reset Progress Button -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onResetProgress"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:rippleColor="#FF5252">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_refresh"
                    app:tint="#FF5252"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESET PROGRESS"
                    android:textColor="#FF5252"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- First row of level icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/level0_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level1_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level2_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level3_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level4_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>
            </LinearLayout>

            <!-- Second row of level icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/level5_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level6_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level7_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level8_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:id="@+id/level9_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/level_icon"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>